{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false,
      "persistent": true
    },
    "lint:fix": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false,
      "persistent": true
    },
    "test:unit": {
      "cache": false,
      "persistent": true
    },
    "test:integration": {
      "cache": false,
      "persistent": true
    },
    "test:verbose": {
      "cache": false,
      "persistent": true
    },
    "test:ci": {
      "cache": false,
      "persistent": true
    }
  }
}
